<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ShoppingList002.Services.Converters"
             xmlns:local="clr-namespace:ShoppingList002"
             x:Class="ShoppingList002.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:SelectedItemEqualityConverter x:Key="SelectedItemEqualityConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:ActionTypeToColorConverter x:Key="ActionTypeToColorConverter" />
            <converters:ActionTypeToBackgroundColorConverter x:Key="ActionTypeToBackgroundColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
