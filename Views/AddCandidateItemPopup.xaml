<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ShoppingList002.Views.AddCandidateItemPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="300,220">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="NameEntry" Placeholder="項目名" />
        <Entry x:Name="DetailEntry" Placeholder="詳細（任意）" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
            <Button Text="キャンセル" Clicked="OnCancelClicked" />
            <Button Text="追加" Clicked="OnAddClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
